<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', type: 'text/css',
                                              'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' ,  type: 'text/css'%>
    <%= render 'layouts/shim' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <!-- flash変数の内容をWebサイトのレイアウトに追加する -->
      <% flash.each do |message_type, message| %>
        <!-- content_tagを使ってレイアウトの中にflashを埋め込む -->
        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
      <% end %>

      <%= yield %>
      <%= render 'layouts/footer' %>

      <!-- 動的サイト生成のため, デバッグ情報を表示 -->
      <!-- paramsはYAMLで記述される -->
      <!-- 本番環境では表示されない -->
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>